<%= render "admin/sidebar_admin" %>
<div class = "col-md-9">
  <%= form_with(model: [:admin, @category], local: true) do |c|%>
    <%= render "shared/error_messages",object:  c.object%>
    <%= render "shared/flash_messages" %>
    <div class="col-md-4 ed_profile_img">
      <% if @category.image.attached? %>
        <%= image_tag  @category.image  %>
      <%else%>
        <%= image_tag "sec1_s5_big.jpg" %>
      <%end%>
      <span class="image">
        <%= c.file_field :image %>
      </span>
    </div>
    <div class = "col-md-8 signup">
      <%= c.label :name %>
      <%= c.text_field :name%>
      <%= c.label :status %><%= c.select :status, options_for_select(["1", "0"], selected: @category.status)%>
      <%= c.label :decription%>
      <%= c.text_area :decription,  size: "360x10"%>
        <%= c.submit  "Update", class: "btn btn-primary" %>
    </div>
  <%end%>
</div>
