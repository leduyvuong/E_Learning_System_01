<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
  <div class="ed_sidebar_wrapper shadow_box">
    <div class="ed_profile_img">
      <% if @user.user_profile.image.attached? %>
          <%= image_tag  @user.user_profile.image  %>
        <%else%>
          <%= image_tag "23.png" %>
      <%end%>
    </div>
    <h3>
    <% if @user.user_profile.fullname.nil? %>
          <%= @user.username%>
      <%else%>
          <%=@user.user_profile.fullname %>
      <%end%>
    <%= render "stats" %>
    </h3>
    <div class="ed_tabs_left">
      <ul class="nav nav-pills nav-tabs">
        <li class="active"> 
          <%= link_to  "#dasboard", { :class => "", "data-toggle" => "tab" }  do%>
           <i class="fa fa-home icon_course" aria-hidden="true"></i> <%= t("layouts.header.home")%>
          <%end%>
        </li>
        <li>
          <%= link_to "#wordlist", { :class => "", "data-toggle" => "tab" } do %>
            <i class="fa fa-book icon_course" aria-hidden="true"></i> <%= t("layouts.sidebar.wordlist")%>
          <%end%>
        </li>
        <li>
          <%= link_to activity_path, { :class => ""} do %>
           <i class="fa fa-bell icon_course" aria-hidden="true"></i>     <%= t("layouts.sidebar.activity")%>
          <%end%>
        </li>
        <li>
          <%= link_to "#profile", { :class => "", "data-toggle" => "tab" } do %>
            <i class="fa fa-address-card icon_course" aria-hidden="true"></i> <%= t("layouts.sidebar.profile")%>
          <%end%>
        </li>
      </ul>
    </div>
  </div>
</div>