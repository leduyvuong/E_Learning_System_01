<%= render "admin/sidebar_admin" %>
<div class="col-md-9">
  <table class="table table-striped table-inverse table-responsive table-bordered table-hover">
    
      <thead class="thead-inverse">
        <tr>
          <th>ID</th>
          <th>Questions</th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |q| %>
        <div class="row d-flex justify-content-center mt-4">
          <tr>
            <td colspan = "7">
            </td>
          </tr>
          <tr>
            <td><%=q.id%></td>          
            <td ><%= q.content%></td>
            <td>
              <%= link_to "Edit", edit_admin_question_path(id: q.id), class: "btn btn-primary m-1" %>
              <%= link_to "Delete", [:admin, q], method: :delete, class: "btn btn-primary m-1" %>
            </td>
          </tr> 
        <%end%>
        </div>      
      </tbody>
    </table>
</div>