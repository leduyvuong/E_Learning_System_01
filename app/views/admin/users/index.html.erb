<%= render "admin/sidebar_admin" %>

<div class = "col-md-6">
  <table class="table table-striped table-inverse table-responsive table-bordered table-hover">
      <thead class="thead-inverse">
        <tr>
          <th>Id</th>
          <th>Username</th>
          <th>Email</th>
          <th>Status</th>
          
        </tr>
        </thead>
        <tbody>
        <% @users.each do |u| %>
          <tr>
            <td ><%= u.id%></td>
            <td scope="row"><%= u.username%></td>
            <td ><%= u.email%></td>
            <td><% if u.status.nil?%>
                  <div class ="active"></div>
                <%else%>
                  <div class ="unactive"></div>
                <%end%></td>
            <td>
              <%= link_to "Edit", "" %> | <%= link_to "Unactive", "" %>         
            </td>
          </tr> 
                  
        <%end%>
        </tbody>
    </table>
    <%= will_paginate @users, :previous_label=> t("page.pre"), :next_label => t("page.next") %> 
</div>