<%= render "admin/sidebar_admin" %>
<div class = "col-md-10 ">
  <div class = "row">
    <%= render "shared/flash_messages" %>
  </div>
  
  <div class = "col-md-12">
    <%= form_with( url: admin_categories_path, method: :get, class: "form-inline lg-form search") do |f| %>
        <%= f.submit t("admin.categories.search"), class: "btn aqua-gradient btn-rounded btn-sm my-0"%>
        <%= f.text_field :name, class: "form-control mr-md-2", style: "width:40%"%>
    <%end%>
  </div>
  <ul class="nav nav-pills nav-justified">
    <li class="active"><%= link_to t("admin.categories.pending_list"), "#pending_course", { class: "tab_user", "data-toggle" => "tab" } %></li>
  </ul>
  <div class="tab-content">
    <%= render "pending_course", collection: @categories %>
  </div>
  
</div>