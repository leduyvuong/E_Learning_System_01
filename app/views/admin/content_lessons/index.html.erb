<%= render "admin/sidebar_admin" %>
<div class = "col-md-7 ">
  <table class="table table-striped table-inverse table-responsive table-bordered table-hover">
    <%= render "shared/flash_messages" %>
      <thead class="thead-inverse">
        <tr>
          <th>ID</th>
          <th>Word</th>
          <th>Pronounce</th>
          <th >Mean</th>
        </tr>
      </thead>
      <tbody>
        <% @content_lessons.each do |l| %>
        <div class="row d-flex justify-content-center mt-4">
        <%= form_with(url: admin_content_lesson_path(id: l.id),method: :put, local: true) do |f| %>
          <tr>
            <td colspan = "7">
            </td>
          </tr>
          <tr>
            <td ><%= link_to l.id, admin_content_lesson_path(id: l.id), method: :get %></td>
            <td scope="row"> <%= f.text_field :word, value: l.word%></td>           
            <td ><%= f.text_field :pronounce, value: l.pronounce%></td>
            <td><%= f.text_field :mean, value: l.mean%></td>
            <td>
            <%= f.submit "Edit", class: "btn btn-primary btn-sm" %>       
            <%= link_to "Delete", [:admin, l], method: :delete, class: "btn btn-primary btn-sm"%>
            </td>
          </tr> 
          <%end%>
        </div>      
        <%end%>
      </tbody>
    </table>
    <%= will_paginate @content_lessons, :previous_label=> t("page.pre"), :next_label => t("page.next") %>
</div>
<div class = "col-md-2" style = "">
  <h3>Add new word</h3>
  <%= form_with(model: [:admin, @content_lesson], local: true) do |c|%>
    <%= render "shared/error_messages",object:  c.object%>
      <%= c.label :word %><br>
      <%= c.text_field :word%><br>
      <%= c.label :pronounce %><br>
      <%= c.text_field :pronounce%><br>
      <%= c.label :mean%><br>
      <%= c.text_field :mean%><br>
      <%= c.label :lesson_id%><br>
      <%= c.text_field :lesson_id, value: @lesson.name_lesson%><br>
      <%= c.submit  "Add", class: "btn btn-primary" %>
  <%end%>
</div>