<div class = "col-md-2 dashboad_left sidebar_admin"> 
  <div class="dropdown div-inline">
    <a class="test btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%= t("admin.cate")%>
    <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
    <ul class="dropdown-menu">
    <% if current_user.teacher? %>
      <%categories = current_user.author.active.take(10)%>
    <%else%>
      <%categories = Category.all.take(10)%>
    <%end%>
    <% categories.each do |cate|%>
      <li class="dropdown-submenu">
        <a class="test btn btn-info" tabindex="-1" href="#"><%=cate.name%> <i class="fa fa-arrow-right" style = "float: right; margin-right: 10px" aria-hidden="true"></i></a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to "Sửa",edit_admin_category_path(id: cate.id), class: "btn_admin btn btn-info"%>
          </li>
          <li>
            <%= link_to t("admin.addlesson"), new_admin_lesson_path(id_cate: cate.id), class: "btn_admin btn btn-info"%>
          </li>
          <li class="dropdown-submenu">
            <a class="test btn btn-info" href="#">Bài học <i class="fa fa-arrow-right" style = " margin-left: 30px" aria-hidden="true"></i></a>
            <% if !cate.lessons.blank?%>
              <ul class="dropdown-menu">
              <% cate.lessons.each do |lesson|%>
                <li>
                  <%= link_to lesson.name_lesson,edit_admin_lesson_path(id: lesson.id), class: "btn_admin btn btn-info"%>
                </li>
              <%end%>
              </ul>
            <%end%>
          </li>
        </ul>
      </li>
    <%end%>
      <li>
        <%= link_to t("admin.addcate"), new_admin_category_path, class: "btn_admin btn btn-info"%>
      </li>
      
      <li class="dropdown-submenu">
        <%= link_to t("admin.catelist"), admin_categories_path, class: "btn_admin btn btn-info"%>
      </li>
      
      <li>
        <%= link_to t("admin.categories.pending_list"), admin_pending_category_path, class: "btn_admin btn btn-info"%>
      </li>
    </ul>
  </div>
  <%if current_user.admin?%>
    <div class="dropdown div-inline">
      <a class="test btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%= t("admin.user")%>
      <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
      <ul class="dropdown-menu">
        <li class="dropdown-submenu">
          <%= link_to t("admin.userlist"), admin_users_path, class: "btn_admin btn btn-info"%>
        </li>
        <li>
          <%= link_to t("admin.adduser"), new_admin_user_path, class: "btn_admin btn btn-info"%>
        </li>
      </ul>
    </div>
  <%end%>
  <div class="dropdown div-inline">
    <a class="test btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%= t("admin.statistic")%>
    <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
    <ul class="dropdown-menu">
      <li class="dropdown-submenu">
        <% if current_user.admin?%>
          <%= link_to t("admin.statistic_user"), admin_statistics_path, class: "btn_admin btn btn-info"%>
        <%end%>
      </li>
      <li>
        <%= link_to t("admin.statistic_cate"), admin_category_statistic_path, class: "btn_admin btn btn-info"%>
      </li>
    </ul>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.dropdown-submenu a.test').on("click", function(e){
      $(this).next('ul').toggle();
      e.stopPropagation();
      e.preventDefault();
    });
  });
</script>