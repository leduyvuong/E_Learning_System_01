<% provide(:title, t("session.new.title")) %>
<div class ="ed_dashboard_wrapper">
  <div class="row ">
    <div class="col-md-4 col-md-offset-4 signup">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <h1><%= t("session.new.title")%></h1>
        <%= render "shared/flash_messages" %>
        <%= f.label t("session.new.username") %>
        <%= f.text_field :username, class: 'form-control' %>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.submit t("session.new.title"), class: "btn btn-primary" %>
      <% end %>
      <p><%= t("session.new.new_user")%> <%= link_to t("session.new.signup"), signup_path %></p>
    </div>
  </div>
</div>
