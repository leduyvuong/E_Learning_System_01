<% provide(:title, t('static_pages.home.title') )%>
<div class="ed_dashboard_wrapper">
  <div class="container">
    <div class="row">
      <%= render "layouts/sidebar" %>     
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        <div class="ed_dashboard_tab">
          <div class="tab-content">
            <div class="tab-pane active" id="dasboard">
              <div class="ed_dashboard_tab_info">
                <div class = "tabcon">
                  <h1><%= t('static_pages.home.hello')%>, <span>
                    <% if @user.user_profile.fullname.nil? %>
                      <%= @user.username%>
                    <%else%>
                      <%=@user.user_profile.fullname %>
                    <%end%>
                  </span></h1>
                  <h1><%= t('static_pages.home.wellcome')%></h1>
                  <p><%= t('static_pages.home.hi')%> <strong><span>
                    <% if @user.user_profile.fullname.nil? %>
                      <%= @user.username%>
                    <%else%>
                      <%=@user.user_profile.fullname %>
                    <%end%>
                  </strong><%= t('static_pages.home.content')%>
                  </p>
                </div>                
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style ="padding-top: 50px">
                  <%= form_with url: add_summary_path, model: @summary, class: "ed_tabpersonal" do |f|%>
                    <%= render "shared/flash_messages" %>
                    <div class="field">
                      <%= f.text_area :content, placeholder: "Compose new summary...", class: "form-control" %>
                    </div>
                    <div class="form-group">                   
                      <%= f.submit t('static_pages.home.post'), class: "btn ed_btn ed_green" %>
                    </div>
                  <% end %>                
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12" style ="padding-top: 20px">
                  <p><%= t('static_pages.home.summary')%></p>
                  <div >
                    <section class="notepaper">                        
                      <% @user.summaries.suma.each do |s| %>                     
                      <blockquote id="summary-<%s.id%>" class="curly-quotes">
                         Content: <%=s.content%><br>
                         <div class = "time_ago">
                          Posted <%= time_ago_in_words(s.created_at) %> ago.
                            <%= link_to "delete", delete_summary_path(id: s.id), method: :delete,
                                                    data: { confirm: "You sure?" } %>
                          </div>
                      </blockquote>
                      <%end%>                   
                    </section>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="wordlist">                  
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 container ed_dashboard_tab_info " id ="wordlist"> 
                <% if @categories %>
                  <h3 ><%= t('layouts.sidebar.wordlist')%></h3>                          
                    <ul class="nav nav-tabs ">
                      <% @categories.each do |w| %>                
                        <% if @categories.index(w) == 0%>
                          <li class="active"><%= link_to w.name, "#course#{w.id}", { :class => '', 'data-toggle' => 'tab' }%></li>
                        <% else %>
                          <li><%= link_to w.name, "#course#{w.id}", { :class => '', 'data-toggle' => 'tab' }%></li>
                        <%end%>
                      <% end %>
                    </ul>
                  <div class="tab-content">  
                    <% @categories.each do |cate|%> 
                      <% if @categories.index(cate) == 0 %>              
                        <div id="course<%=cate.id%>" class="tab-pane active">  
                          <div class = "col-md-3 ed_tabs_lesson">                                           
                            <ul class="nav nav-tabs ">
                              <% cate.lessons.each do |l|%> 
                                <% if cate.lessons.index(l) == 0 %>                       
                                  <li class="active"><%= link_to l.name_lesson, "#lesson#{l.id}", { :class => '', 'data-toggle' => 'tab' }%></li>                    
                                <% else %>
                                  <li class=""><%= link_to l.name_lesson, "#lesson#{l.id}", { :class => '', 'data-toggle' => 'tab' }%></li>
                                <%end%> 
                              <%end%>
                            </ul>
                          </div>
                          <div class = "col-lg-9 col-md-9 col-sm-9 col-xs-12">
                            <div class="tab-content" >
                              <%cate.lessons.each do |lesson_content|%>  
                                <% if cate.lessons.index(lesson_content) == 0%>
                                  <div id="lesson<%=lesson_content.id%>" class="tab-pane active">
                                    <h3><%= lesson_content.name_lesson%></h3>                          
                                  </div>
                                <%else%>
                                  <div id="lesson<%=lesson_content.id%>" class="tab-pane">
                                    <h3><%= lesson_content.name_lesson%></h3>                          
                                  </div>
                                <%end%>
                              <%end%>                                       
                            </div>
                          </div>
                        </div>                    
                      <%else%>
                      <div id="course<%=cate.id%>" class="tab-pane">
                        <div class="row">
                          <div class = "col-md-3 ed_tabs_lesson">
                            <ul class="nav nav-tabs">
                              <% cate.lessons.each do |lesson|%> 
                                <% if cate.lessons.index(lesson) == 0 %>                       
                                  <li class="active"><%= link_to lesson.name_lesson, "#lesson#{lesson.id}", { :class => '', 'data-toggle' => 'tab' }%></li>                    
                                <% else %>
                                  <li class=""><%= link_to lesson.name_lesson, "#lesson#{lesson.id}", { :class => '', 'data-toggle' => 'tab' }%></li>
                                <%end%> 
                              <%end%>
                            </ul>
                          </div>
                          <div class = "col-lg-9 col-md-9 col-sm-9 col-xs-12">
                            <div class=" tab-content" >
                              <%cate.lessons.each do |lesson_content|%>  
                                <% if cate.lessons.index(lesson_content) == 0%>
                                  <div id="lesson<%=lesson_content.id%>" class="tab-pane active">
                                    <h3><%= lesson_content.name_lesson%></h3>                          
                                  </div>
                                <%else%>
                                  <div id="lesson<%=lesson_content.id%>" class="tab-pane">
                                    <h3><%= lesson_content.name_lesson%></h3>                          
                                  </div>
                                <%end%>
                              <%end%>                                       
                            </div>
                          </div>
                        </div>
                      </div>
                      <%end%>
                    <%end%>
                    </div>                 
                  </div>                                   
                <% else %>
                    <h3 >Bạn chưa tham gia khóa học nào</h3>
                <% end %>
            </div>
            <div class="tab-pane" id="profile">
              <div class="col-md-12 ed_dashboard_tab_info"> 
              <div class ="row">  
                <div class = "col-md-6">                     
                  <p>UserName:</p>
                  <p>Email: </p>
                  <p><%= t("users.profile.fullname")%></p>
                  <p><%= t("users.profile.sex")%></p>
                  <p><%= t("users.profile.address")%></p>
                  <p><%= t("users.profile.phone")%></p>
                  <p><%= t("users.profile.courses")%></p>
                </div>
                <div class = "col-md-6">                     
                  <p><%= @user.username%></p>
                  <p><%= @user.email%></p>
                  <p><%= @user.user_profile.fullname%></p>
                  <p><%= @user.user_profile.sex%></p>
                  <p><%= @user.user_profile.address%></p>
                  <p><%= @user.user_profile.phone%></p>
                  <p>13</p>
                </div>
                </div>
                <div class ="row ed_dashboard_tab_info">
                  <%= link_to t('users.edit.update_profile'), edit_path, class: "btn btn-primary"%>
                </div>
              </div>               
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
