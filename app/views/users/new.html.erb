<% provide(:title, t("users.new.title")) %>
<div class ="signup"> 
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1><%= t('users.new.signup')%></h1>
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.label :password, t('users.new.password') %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, t('users.new.confirm') %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit  t('users.new.create'), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>