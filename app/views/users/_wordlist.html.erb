<div class="tab-pane" id="wordlist">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 container ed_dashboard_tab_info " id="wordlist">
    <% if @lessons.count != 0%>
      <h3>
        <%= t('layouts.sidebar.wordlist')%>
      </h3>
        <% @lessons.each do |lesson|%>
        <div class = "col-md-12">
          <h4><%= lesson.name_lesson%> :</h4>
          <%lesson.content_lessons.each do |words|%>
            <div class = "col-md-3">
              <%= words.word%>
              <% if words.audio_word.attached? %>
              <a class = "btn-lg"  onclick="play(<%=words.id%>)">
                <i class="fa fa-play-circle-o" aria-hidden="true"></i>
              </a>
              <%= audio_tag url_for(words.audio_word), id: "audio#{words.id}"%>
            <%end%>
            </div>
          <%end%>
          </div>
        <%end%>
        <%= will_paginate @lessons, :previous_label=> t("page.pre"), :next_label => t("page.next") %>
    <% else %>
      <h3><%= t("wordlist.not_join")%></h3>
    <% end %>
  </div>
</div>