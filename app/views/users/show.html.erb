<% provide(:title, t("static_pages.home.title") )%>
<div class="ed_dashboard_wrapper">
  <div class="container">
    <div class="row">
      <%= render "layouts/sidebar" %>     
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        <div class="ed_dashboard_tab">
          <div class="tab-content">
            <div class="tab-pane active" id="dasboard">
              <div class="ed_dashboard_tab_info">
                <div class = "tabcon">
                  <h1><%= t("static_pages.home.hello")%>, <span><%= @user.username%></span></h1>
                  <h1><%= t("static_pages.home.wellcome")%></h1>
                  <p><%= t("static_pages.home.hi")%> <strong><span><%= @user.username%></strong><%= t("static_pages.home.content")%>
                  </p>
                </div>                
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" style ="padding-top: 50px">
                  <%= form_with model: @summary, class: "ed_tabpersonal" do |f|%>
                    <%= render "shared/flash_messages" %>
                    <%= render "shared/error_messages", object: f.object %>
                    <div class="field">
                      <%= f.text_area :content, placeholder: t("summary.new"), class: "form-control" %>
                    </div>
                    <div class="form-group">                   
                      <%= f.submit t("static_pages.home.post"), class: "btn ed_btn ed_green" %>
                    </div>
                  <% end %>                
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12" style ="padding-top: 20px">
                  <p><%= t("static_pages.home.summary")%></p>
                  <div >
                    <section class="notepaper">
                      <% @summary_list.each do |s| %>                     
                      <blockquote id="summary-<%s.id%>" class="curly-quotes">
                         <%= t("summary.content")%> <%=s.content%><br>
                         <div class = "time_ago">
                         <%= t("summary.posted")%> <%= time_ago_in_words(s.created_at) %> <%= t("summary.ago")%>
                            <%= link_to "delete", s , method: :delete,
                                                    data: { confirm: "You sure?" } %>
                          </div>
                      </blockquote>
                      <%end%>                             
                    </section>
                  </div>
                </div>
              </div>
            </div>
              <div class="tab-pane" id="wordlist">  
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 container ed_dashboard_tab_info" id ="wordlist">                
                <h3 ><%= t("layouts.sidebar.wordlist")%></h3>                                 
                <ul class="nav nav-tabs">
                  <li class="active"><%= link_to t("static_pages.home.course_number", numberc: 1), "#course1", { :class => "", "data-toggle" => "tab" }%></li>
                  <li><%= link_to t("static_pages.home.course_number", numberc: 2), "#course2", { "data-toggle" => "tab" }%></li>
                  <li><%= link_to t("static_pages.home.course_number", numberc: 3), "#course3", { "data-toggle" => "tab" }%></li>
                  <li><%= link_to t("static_pages.home.course_number", numberc: 4), "#course4", { "data-toggle" => "tab" }%></li>
                </ul>
                <div class="tab-content">
                  <div id="course1" class="tab-pane active">
                    <ul class="nav nav-tabs">
                      <li class="active"><%= link_to t("static_pages.home.lesson_number", numberl: 1), "#menu2", { :class => "", "data-toggle" => "tab" }%></li>
                      <li><%= link_to t("static_pages.home.lesson_number", numberl: 2), "#menu3", { "data-toggle" => "tab" }%></li>
                      <li><%= link_to t("static_pages.home.lesson_number", numberl: 3), "#menu4", { "data-toggle" => "tab" }%></li>
                      <li><%= link_to t("static_pages.home.lesson_number", numberl: 4), "#menu5", { "data-toggle" => "tab" }%></li>
                      <li><%= link_to t("static_pages.home.lesson_number", numberl: 5), "#menu6", { "data-toggle" => "tab" }%></li>
                      <li><%= link_to t("static_pages.home.lesson_number", numberl: 6), "#menu7", { "data-toggle" => "tab" }%></li>
                    </ul>
                    <div class="tab-content" >                      
                      <div id="menu2" class="tab-pane active">
                        <h3><%= t("static_pages.home.lesson_number", numberl: 1)%></h3>
                      </div>
                      <div id="menu3" class="tab-pane fade">
                        <h3><%= t("static_pages.home.lesson_number", numberl: 2)%></h3>
                      </div>
                      <div id="menu4" class="tab-pane fade">
                        <h3><%= t("static_pages.home.lesson_number", numberl: 3)%></h3>
                      </div>
                      <div id="menu5" class="tab-pane fade">
                        <h3><%= t("static_pages.home.lesson_number", numberl: 4)%></h3>                        
                      </div>                     
                      <div id="menu6" class="tab-pane fade">
                        <h3><%= t("static_pages.home.lesson_number", numberl: 5)%></h3>
                        
                      </div>
                      <div id="menu7" class="tab-pane fade">
                        <h3><%= t("static_pages.home.lesson_number", numberl: 6)%></h3>                       
                      </div>
                      <div id="#course4" class="tab-pane fade">
                        <h3>Menu 3</h3>
                      </div>
                    </div>
                  </div>
                  <div id="course2" class="tab-pane fade">  
                  </div>
                 </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>