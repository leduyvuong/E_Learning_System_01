<div id="unactive_course" class="tab-pane">
<%if !@categories.unactive.blank?%>
  <table class="table table-striped table-inverse table-responsive table-bordered table-hover">
    <thead class="thead-inverse">
      <tr>
        <th>STT</th>
        <th><%= t("admin.categories.name")%></th>
        <th style = "width: 11%"><%= t("admin.categories.status")%> </th>
        <th style = "width: 60%"><%= t("admin.categories.decrip")%> </th>
      </tr>
    </thead>
    <tbody>
      <% @categories.unactive.each do |c| %>
      <div class="row d-flex justify-content-center mt-4">
        <tr>
          <td >
            <%if params[:page]%>
              <%= (params[:page].to_i - 1)*6 + @categories.index(c) +1 %>
            <%else%>
              <%= @categories.unactive.index(c) + 1 %>
            <%end%>
          </td>
          <td scope="row"><%= c.name%></td>           
          <td>
            <div class ="unactive_status"></div>
          </td>
          <td ><%= c.decription%></td>
          <td>
            <%= link_to edit_admin_category_path(id: c.id), class: "btn btn-primary m-1" do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <%end%> 
            <%= link_to [:admin, c], method: :delete, class: "btn btn-primary m-1" do %>
              <i class="fa fa-circle" aria-hidden="true"></i>
            <%end%>    
          </td>
        </tr> 
      </div>      
      <%end%>
    </tbody>
  </table>
  <%= will_paginate @categories.unactive, :previous_label=> t("page.pre"), :next_label => t("page.next") %>
<%else%>
  <h3>Chưa có khóa học</h3>
<%end%>
</div>